<div class="limiter">
    <div class="container-login100" style="background-image: url('/assets/bg-02.jpg'); padding-bottom:20vh;">
        <div class="wrap-login100-signin p-l-110 p-r-110 p-t-10 p-b-10">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                <div class="login100-form validate-form flex-sb flex-w">
                    <%= render "devise/shared/error_messages", resource: resource %>
                    <%= f.hidden_field :reset_password_token %>

                    <span class="login100-form-title p-b-1">
                        <h2 style="font-size:30px; color:black;">  Change Your Password </h2>
                    </span>                     
                    

                    <div class="pt-3 pb-3 mb-1 col-md-12" style="border-radius:5px;  border:2px solid indigo;">
                        <%= f.password_field :password, class: "form-control mt-2 mb-1",  style: "margin-left:50px; width:350px; height:45px;", placeholder: "New Password(6 chars min) :" %>
                        <%= f.password_field :password_confirmation, class: "form-control mt-2 mb-1",  style: "margin-left:50px; width:350px; height:45px;", placeholder: "New Password Confirm(6 chars min) :" %>
                        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                        <%= link_to "Didn't receive confirmation instructions?", new_user_confirmation_path(resource_name) %><br />
                        <% end %>       
                    </div>

                    <br>
            
                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn">
                                Change my password
                            </button>
                        </div>
                    </div>  
                </div>                                   
            <% end %>
        </div>
    </div>
</div>
