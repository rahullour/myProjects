<div class="limiter">
    <div class="container-login100" style="background-image: url('/assets/bg-02.jpg'); padding-top:0px; padding-bottom:10vh;">
        <div class="wrap-login100-signup p-l-80 p-r-80 p-t-10 p-b-10">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data:{turbo: false}) do |f| %>
                <div class="login100-form validate-form flex justify-content-center">
                    <%= render "devise/shared/error_messages", resource: resource %>
                    <span class="login100-form-title p-b-1">
                        <h2 style="font-size:30px; color:black;"> Sign Up </h2>
                    </span>                                   
                        
                    <div style="display:flex;">
                        <div class="pt-3 mr-1 pb-3 mb-1 col-md-6 mr-0" style="border-radius:5px; border:2px solid indigo;">
                            <%= f.text_field :first_name, class: "form-control mt-2 mb-1", style: "margin-left:50px; width:410px; height:50px;", placeholder: "* First Name :" %>                      
                            <%= f.text_field :last_name, class: "form-control mt-2 mb-1", style: "margin-left:50px; width:410px; height:50px;", placeholder: "* Last Name :" %>
                            <%= f.text_field :username, class: "form-control mt-2 mb-1", style: "margin-left:50px; width:410px; height:50px;", placeholder: "* Username :" %>
                            <%= f.text_area :address, :value => @city+" , "+@state+" , "+@country+" , "+@zipcode, class: "form-control mt-2 mb-1", style: "margin-left:50px; width:410px; height:125px;", placeholder: "* Address :" %>
                            <%= f.password_field :password, class: "form-control mt-2 mb-1", style: "margin-left:50px; width:410px; height:50px;", placeholder: "* Password (6 chars min) :" %>
                            <%= f.password_field :password_confirmation, class: "form-control mt-2 mb-1", style: "margin-left:50px; width:410px; height:50px;", placeholder: "* Password Confirmation(6 chars min) :" %>
                        </div>

                        <div class="pt-3 pr-5 pb-3 mb-1 col-md-6 mr-0" style="width:500px; height:175px; border-radius:5px; border:2px solid indigo;">
                            <%= f.email_field :email, class: "form-control mb-1", style: "margin-bottom:0px; margin-left:50px; width:410px; height:50px;", placeholder: "Email :" %>
                            <span style="margin-left:200px;"> OR </span>
                            <%= f.text_field :telephone, id: "phone", class: "form-control", style: "margin-bottom:0px; margin-left:50px; width:410px; height:50px;", placeholder: "Tel Num With Country Code :" %>                           
                        </div>

                        <%= hidden_field_tag 'country_code_symbol', '' %>
                        <%= hidden_field_tag 'phone_number', '' %>
                
                    </div>
                    <div class="pt-3 pb-3 mb-1 col-md-6" style="position: absolute; left: 675px; top: 230px; z-index: 1;">
                        <%- if devise_mapping.omniauthable? %>
                        <div class="col-md-5" style= "display: none;" >
                            <%- resource_class.omniauth_providers.each do |provider| %>
                                <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post %><br />
                            <% end %>
                        </div>    
                        <% end %> 
                
                        <div class="pt-3 pb-3 mb-1" style="display:flex;">
                        <%- if devise_mapping.omniauthable? %>
                        <div class="mt-3 mr-5 col-md-1">
                            <%= button_to image_tag("/assets/icons/facebook.png"), user_facebook_omniauth_authorize_path, class: "btn-google", style: "margin-left:4vw;", method: :post %> &nbsp
                        </div>    

                        <div class="mt-3 mr-5 col-md-1">
                            <%= button_to image_tag("/assets/icons/github.png"), user_github_omniauth_authorize_path, class: "btn-google", style: "margin-left:4vw;", method: :post %> &nbsp
                        </div>  

                        <div class="mt-3 mr-5 col-md-1">
                            <%= button_to image_tag("/assets/icons/google-icon.png"), user_google_oauth2_omniauth_authorize_path, class: "btn-google", style: "margin-left:4vw;", method: :post %> &nbsp
                        </div>  

                        
                        <div class="mt-3 mr-5 col-md-5">
                            <%= button_to image_tag("/assets/icons/twitter.png"), user_twitter_omniauth_authorize_path, class: "btn-google", style: "margin-left:4vw;", method: :post  %> &nbsp
                        </div> 
                        </div> 
                        <% end %> 
                        <% if devise_mapping.rememberable? %>
                            <div class="col-md-5" style= "margin-left:10vw;">
                                <%= f.check_box :remember_me %>
                                <%= f.label :remember_me, class: "form-check-label" %>
                            </div>
                        <% end %>

                        <br>
                
                        <div class="container-login100-form-btn">
                            <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn" onclick="setHiddenFields();  setPageLoadOnce();">
                                    Sign Up
                            </button>
                            </div>
                        </div>
                            

                        <div class="w-full p-t-5 m-l-140">
                            <span class="txt2">
                                Already a member? &nbsp
                            </span>
                            <a href="/users/sign_in" class="txt2 bo1" style="color: blue;">
                            Sign In
                            </a>
                        </div>

                    </div> 
                    <div style="margin-top:25px; margin-left:410px;"> All fields marked with * are mandatory . </div> 
                    <div style="margin-left:360px;"> You can register with either Email or Phone Number .</div>         
                </div>
            <% end %>
        </div>
    </div>
</div>

























