<div class="row">
  <div class="col-9">  
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col">Email</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><%= friend.email %></td>
            <td><%= friend.first_name %></td>
            <td><%= friend.last_name %></td>
            <td>
            <% if !current_user.not_friends_with?(friend.id) %>
                          <%= button_to 'Stop following', friendships_destroy_path(id: friend.id) , 
                          method: :delete,
                          form: { data: { turbo_confirm: 'Are you sure?' } }, class: "btn btn-warning", id: "delete_button_index" %>
            <% end %>       
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>