
<div class="container" >
<%= form_with(model: article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
  <% article.valid? %>
  <% if @article_created && article.errors.any? %>
    <div style="color: white" class="form-group row">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group row">
  <%= form.label :title, class: "col-2 col-form-label text-light" %>
  <div class="col-10"> 
    <%= form.text_area :title, rows: 4, class: "form-control shadow rounded", placeholder: article.title %>
     <br>
    </div>
  </div>  

<div class="form-group row">
<%= form.label :description, class: "col-2 col-form-label text-light" %>
<div class="col-10"> 
  <%= form.text_area :des, rows: 4, class: "form-control shadow rounded", placeholder: article.des %>
   <br>
  </div>
</div>

<div class="form-group row justify-content-center">
    <%= form.submit "Update Article",class: "btn btn-outline-light btn-lg" %>
</div>
<% end %>
</div>
<div style="padding-bottom:80px;">
<%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-danger" %>
</div>
</div>
</div>