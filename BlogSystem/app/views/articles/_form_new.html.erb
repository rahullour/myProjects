
<div class="container" >
<%= form_with(model: article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
  <% if article.errors.any? %>
  <div style="color: red">
  <div style="color: white" class="form-group row">
    <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

    <ul>
      <% article.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <div class="form-group row">
  <%= form.label :title, class: "col-2 col-form-label text-light" %>
  <div class="col-10">
    <%= form.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
    <br>
    </div>
</div>

<div class="form-group row">
<%= form.label :Description, class: "col-2 col-form-label text-light" %>
<div class="col-10"> 
<%= form.text_area :des, rows: 2, class: "form-control shadow rounded", placeholder: "Description of article" %>
<br>
</div>
</div>

<div class="form-group row">
          
<%= form.label :category, class: "col-2 col-form-label text-light" %>
          
<div class="col-5"> 
<%= form.collection_select(:category_ids, Category.all, :id, :name,
{ prompt: "Make your selection from the list below (can be empty) !"}, { multiple: true, size: 4, class: "custom-select shadow rounded form-select-lg mb-3" }) %>
</div>

</div>




<div class="form-group row justify-content-center">
<%= form.submit "Create Article",class: "btn btn-outline-light btn-lg" %>
</div>
<% end %>
</div>
<div style="padding-bottom:80px;">
<%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-danger" %>
</div>
</div>
</div>