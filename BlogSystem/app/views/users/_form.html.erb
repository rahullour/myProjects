<div class="container">
<%= form_with(model: user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
  <div class="text-center">
        <% if user.errors.any? %>
          
            <div style="color: white" class="form-group row">
              <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from signup:</h2>
              <ul>
                <% user.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
  </div>


  <div class="form-group row">
    <%= form.label :username, class: "col-2 col-form-label text-light" %>
    <div class="col-10">
    <%= form.text_field :username, class: "form-control shadow rounded", placeholder: "Enter Username: " %>
    <br>
    </div>
    </div>

    <div class="form-group row">
    <%= form.label :email, class: "col-2 col-form-label text-light" %>
    <div class="col-10">
    <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter Email: " %>
    <br>
  </div>
  </div>

  <div class="form-group row">
  <%= form.label :password, class: "col-2 col-form-label text-light" %>
  <div class="col-10">
  <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Enter Password: " %>
  <br>
</div>
</div>


<div class="form-group row justify-content-center">
<%= form.submit(@user.new_record? ? "Sign Up" : "Update Account", class:"btn btn-outline-light btn-lg") %>
</div>
<% end %>
</div>
</div>